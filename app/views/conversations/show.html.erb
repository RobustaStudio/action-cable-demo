<%= @conversation.sender.email %>
<%= @conversation.recipient.email %>

<%= render(partial: 'messages/messages', locals: { messages: @conversation.messages, conversation: @conversation }) %>

<%= form_for [@conversation, Message.new], remote: true do |f|%>
  <%= f.text_area :body, 'data-behavior' => 'new_message_field' %>
  <%= f.hidden_field :conversation_id, value: params[:id], id: 'conversation_id' %>
  <%= f.submit 'Send', class: 'button' %>
<% end %>
